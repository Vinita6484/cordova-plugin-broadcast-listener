<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-broadcast-listener" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0">
  <name>BroadcastPlugin</name>
  <description>Listens for Android broadcasts and sends data to JS</description>
  <license>MIT</license>
  <keywords>cordova, broadcast, listener, zebra, datawedge</keywords>
  <engines>
    <engine name="cordova" version=">=10.0.0" />
  </engines>

  <!-- JavaScript interface -->
  <js-module src="www/broadcast.js" name="BroadcastPlugin">
    <clobbers target="cordova.plugins.BroadcastPlugin" />
  </js-module>

  <!-- Android platform -->
  <platform name="android">
    <!-- Register plugin class -->
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="BroadcastPlugin">
        <param name="android-package" value="com.example.broadcast.BroadcastPlugin" />
        <param name="onload" value="true" />
      </feature>
    </config-file>

    <!-- Java source files -->
    <source-file src="src/android/com/example/broadcast/BroadcastPlugin.java" target-dir="src/com/example/broadcast" />
    <source-file src="src/android/com/example/broadcast/IntentListener.java" target-dir="src/com/example/broadcast" />

    <!-- Inject broadcast receiver into AndroidManifest -->
    <config-file target="AndroidManifest.xml" parent="application">
      <receiver android:exported="true" android:name="com.example.broadcast.IntentListener">
        <intent-filter>
          <action android:name="com.example.broadcast.SCAN" />
          <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
      </receiver>
    </config-file>
  </platform>
</plugin>
